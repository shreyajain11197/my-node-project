{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 10",
  
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",

    //Added new - start

    "rootDir": "./",
    "outDir": "./build",

    // Add new - end


    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
